# Admin Analytics Dashboard - Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# AUTHENTICATION (Replace with your preferred auth provider)
# =============================================================================

# Supabase Configuration (if using Supabase)
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Firebase Configuration (if using Firebase)
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# NextAuth Configuration (if using NextAuth.js)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret

# OAuth Providers (if using social login)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# =============================================================================
# DATABASE (Replace with your database provider)
# =============================================================================

# PostgreSQL
DATABASE_URL=postgresql://username:password@localhost:5432/dashboard_db

# MySQL
# DATABASE_URL=mysql://username:password@localhost:3306/dashboard_db

# MongoDB
# DATABASE_URL=mongodb://localhost:27017/dashboard_db

# =============================================================================
# ANALYTICS & MONITORING (Optional)
# =============================================================================

# Google Analytics
VITE_GA_TRACKING_ID=your_ga_tracking_id

# Mixpanel
VITE_MIXPANEL_TOKEN=your_mixpanel_token

# Sentry (Error Monitoring)
VITE_SENTRY_DSN=your_sentry_dsn

# =============================================================================
# EMAIL SERVICE (Optional)
# =============================================================================

# SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key

# Mailgun
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=your_mailgun_domain

# =============================================================================
# FILE STORAGE (Optional)
# =============================================================================

# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_s3_bucket_name

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# =============================================================================
# PAYMENT PROCESSING (Optional)
# =============================================================================

# Stripe
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =============================================================================
# API INTEGRATIONS (Optional)
# =============================================================================

# OpenAI (for AI features)
OPENAI_API_KEY=your_openai_api_key

# Slack (for notifications)
SLACK_WEBHOOK_URL=your_slack_webhook_url

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Environment
NODE_ENV=development

# Port (if different from default)
PORT=3000

# API Base URL
VITE_API_BASE_URL=http://localhost:3000/api

# =============================================================================
# SECURITY
# =============================================================================

# JWT Secret (for custom auth implementations)
JWT_SECRET=your_super_secret_jwt_key_here

# Encryption Key (for sensitive data)
ENCRYPTION_KEY=your_32_character_encryption_key

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com